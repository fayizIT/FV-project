<div class="container-fluid row d-flex col-md-12 sales-container">



    <div class="col-12 ">
        <div class="d-flex">
            <a href="/admin/salesPage" class="btn btn-primary mx-2 my-3" style="font-size: small">Total sales</a>
            <a href="/admin/getTodaySales" class="btn btn-primary mx-2 my-3" style="font-size: small">Today sales</a>
            <a href="/admin/getWeekSales" class="btn btn-primary mx-2 my-3" style="font-size: small">Week sales</a>
            <a href="/admin/getMonthlySales" class="btn btn-primary mx-2 my-3" style="font-size: small">Monthly
                sales</a>
            <a href="/admin/getYearlySales" class="btn btn-primary mx-2 my-3" style="font-size: small">Year sales</a>
            <div style="margin-left: auto;" class="mt-3">
                <form class="date-form" action="/admin/salesWithDate" method="post">
                    <label for="from-date">From</label>
                    <input id="from-date" class="date-input" name="fromDate" style="font-size: x-small;" type="date">
                    <label for="to-date" class="ms-2">To</label>
                    <input id="to-date" class="date-input" name="toDate" style="font-size: x-small;" type="date">
                    <button type="submit" class="btn btn ms-2"
                        style="font-size:small;background-color: #000000;color:white">Get</button>
                </form>

            </div>
        </div>
        <h4 class="mt-2 ms-2">Total:â‚¹{{total.[0].totalAmount}}</h4>
        <a href="/admin/salesReport" class="btn btn "
            style="background-color: #ffd900;color: #000000; font-size: x-small;">Download Sales Report</a>


        {{#if order}}
        <div class="sales-form mt-5">

            <table class="table w-100" id="myTable">
                <thead>

                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Date</th>
                        <th scope="col">User</th>

                        <th scope="col">payment</th>
                        <th scope="col">Status</th>
                        <th scope="col">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each order}}
                    <tr>


                        <td class="align-middle">{{inc @index}}</td>
                        <td class="align-middle">{{this.date}}</td>
                        <td class="align-middle">{{this.userName}}</td>
                        <td class="align-middle">{{this.paymentMethod}}</td>
                        <td class="align-middle">{{this.orderStatus}}</td>
                        <td class="align-middle">{{this.orderValue}}</td>





                    </tr>
                    {{/each}}

                </tbody>
            </table>
            <div style="height: 25vh;"></div>
        </div>
        {{else}}
         <div class="no-sales-text">
            <h3 class="mb-4" style="color: #000000;">No sales registered !!</h3>
            <div style="height: 50vh;"></div>
        </div>
        {{/if}}
