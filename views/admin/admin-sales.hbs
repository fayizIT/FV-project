    }


    .align-middle {
        vertical-align: middle;
    }

    @media (max-width: 768px) {
        .container-fluid {
            padding: 0;
        }

        .date-form {
            flex-direction: column;
            align-items: flex-start;
            margin-top: 20px;
        }

        .date-form .date-input {
