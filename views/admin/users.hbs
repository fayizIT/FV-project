<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function confirmBlock(userId) {
    Swal.fire({
      title: 'Confirm Block',
      text: 'Are you sure you want to block this user?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, block it!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        blockUser(userId);
      }
    });
  }

  function blockUser(userId) {
  const xhr = new XMLHttpRequest();
  xhr.open('GET', `/admin/block?id=${userId}`, true);
  xhr.onreadystatechange = function() {
    if (xhr.readyState === 4) {
      if (xhr.status === 200) {
        Swal.fire({
          title: 'User Blocked',
          text: 'The user has been blocked.',
          icon: 'success'
        }).then(() => {
          // Update the button state to unblock
          const button = document.getElementById(`blockButton-${userId}`);
          if (button) {
            button.innerHTML = 'UNBLOCK';
            button.classList.remove('btn-outline-danger');
            button.classList.add('btn-outline-primary');
            button.setAttribute('onclick', `unblockUser('${userId}')`);
          }
        });
      } else {
        Swal.fire({
          title: 'Error',
          text: 'Failed to block the user.',
          icon: 'error'
        });
      }
    }
  };
  xhr.send();
}

function unblockUser(userId) {
  const xhr = new XMLHttpRequest();
  xhr.open('GET', `/admin/unblock?id=${userId}`, true);
  xhr.onreadystatechange = function() {
    if (xhr.readyState === 4) {
      if (xhr.status === 200) {
        Swal.fire({
          title: 'User Unblocked',
          text: 'The user has been unblocked.',
          icon: 'success'
        }).then(() => {
          // Update the button state to block
          const button = document.getElementById(`blockButton-${userId}`);
          if (button) {
            button.innerHTML = 'BLOCK';
            button.classList.remove('btn-outline-primary');
            button.classList.add('btn-outline-danger');
            button.setAttribute('onclick', `blockUser('${userId}')`);
          }
        });
      } else {
        Swal.fire({
          title: 'Error',
          text: 'Failed to unblock the user.',
          icon: 'error'
        });
      }
    }
  };
  xhr.send();
}

</script>



