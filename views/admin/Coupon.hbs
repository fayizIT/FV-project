                                </div>
                                <div class="coupon-details">
                                    <h3 class="coupon-code">
                                        <i class="fas fa-ticket-alt coupon-code-icon mx-1" style="color: rgb(109, 107, 107);">{{coupenCode}}</i>
                                    </h3>
                                    <p class="coupon-description">{{description}}</p>
                                    <p class="coupon-expiry">Expires on: {{expiryDate}}</p>
                                    {{#if (eq status 'Active')}}
