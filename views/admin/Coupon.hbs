      padding: 10px;
      border-radius: 20px;
    }

    .coupon-logo {
      margin-right: 10px;
    }

    .logo-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .coupon-details {
      flex-grow: 1;
    }

    .coupon-code span,
    .coupon-description span,
    .coupon-start span,
    .coupon-expire span,
    .coupon-status span {
      font-weight: bold;
    }

    .coupon-actions {
      display: flex;
      align-items: center;
    }

    .coupon-img {
      width: 100px;
      height: 100px;
      margin-right: 10px;
    }

    .coupon-buttons {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .delete-btn,
    .edit-btn {
      width: 25px;
      height: 25px;
      margin-right: 5px;
    }

    /* Additional styling for layout */
    .container-fluid {
      padding: 0;
      overflow-x: hidden;
    }

    .row {
      margin: 0;
    }

    .main-content {
      display: flex;
      height: calc(100vh - 60px); /* Adjust height to fill the remaining viewport */
    }

    .sidebar {
      flex-basis: 20%;
    }

    .coupon-section {
      flex-basis: 80%;
      padding: 20px;
    }

   
