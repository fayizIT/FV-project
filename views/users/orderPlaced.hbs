}

  

  .message-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 100px;
    margin-bottom: 100px;
  }

  .message {
    font-size: 36px;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-name: celebration;
    animation-timing-function: ease-in-out; /* Add easing for smooth zoom effect */
  }

  .icon {
    font-size: 48px;
    margin-top: 20px;
    margin-bottom: 20px;
    color: green; /* Set the icon color to green */
  }

  .row {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    width: 100%;
  }

  .row a {
    flex: 1;
    min-width: 0;
    margin: 0 5px;
  }

  .buttons a {
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    color: white;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.3s;
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-dark {
    background-color: #343a40;
  }

  .btn-dark:hover {
    background-color: #23272b;
  }

  .btn-warning {
    background-color: #ffc107;
  }

  .btn-warning:hover {
    background-color: #e0a800;
  }

  @keyframes celebration {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }
</style>

